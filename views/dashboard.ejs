<!-- Modal -->
<div class="modal fade" id="AddNewProduct" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-0">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label>Product Name</label>
            <input type="text" class="form-control rounded-0" name="product_name" id="product_name" aria-describedby="emailHelp">
          </div>
          
          <div class="form-group">
            <label >Product Price</label>
            <input type="text" class="form-control rounded-0" name="product_price" id="product_price" aria-describedby="emailHelp">
          </div>

          <div class="form-group">
            <label >Product Stock</label>
            <input type="text" class="form-control rounded-0" name="product_stock" id="product_stock" aria-describedby="emailHelp">
          </div>
          
          <div class="form-group">
            <label >Product Discription</label>
            <input type="text" class="form-control rounded-0" name="product_disc" id="product_disc" aria-describedby="emailHelp">
          </div>

          <div class="form-group">
            <label >Product Image</label>
            <input type="file" class="form-control rounded-0" name="product_image" id="product_image" aria-describedby="emailHelp">
          </div>
          
          <button type="submit" class="btn btn-primary rounded-0 btn-lg btn-block">Submit</button>
        </form>
      </div>
